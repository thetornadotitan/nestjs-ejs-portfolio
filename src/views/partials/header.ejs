<header
  class="sticky top-0 z-10 border-b border-[var(--border)] bg-[var(--surface)]"
>
  <div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-4">
    <a href="/" class="font-semibold tracking-tight">
      <%= siteName ?? 'Portfolio' %>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden sm:flex gap-2 text-sm">
      <a
        href="/"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/' ? 'bg-[var(--active)] font-medium' : '' %>"
        >Home</a
      >
      <a
        href="/about"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/about' ? 'bg-[var(--active)] font-medium' : '' %>"
        >About</a
      >
      <!-- <a
        href="/projects"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/projects' ? 'bg-[var(--active)] font-medium' : '' %>"
        >Projects</a
      >
      <a
        href="/contact"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/contact' ? 'bg-[var(--active)] font-medium' : '' %>"
        >Contact</a
      > -->
    </nav>

    <div class="flex items-center gap-2">
      <!-- Theme toggle -->
      <button
        id="themeToggle"
        type="button"
        class="rounded-full p-2 border border-[var(--border)] hover:bg-[var(--hover)]"
        aria-label="Toggle theme"
        title="Toggle theme"
      >
        <span id="themeIconSun" class="hidden" aria-hidden="true">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="4"></circle>
            <path d="M12 2v2"></path>
            <path d="M12 20v2"></path>
            <path d="M4.93 4.93l1.41 1.41"></path>
            <path d="M17.66 17.66l1.41 1.41"></path>
            <path d="M2 12h2"></path>
            <path d="M20 12h2"></path>
            <path d="M6.34 17.66l-1.41 1.41"></path>
            <path d="M19.07 4.93l-1.41 1.41"></path>
          </svg>
        </span>

        <span id="themeIconMoon" class="hidden" aria-hidden="true">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </span>

        <span class="sr-only">Toggle theme</span>
      </button>

      <!-- Mobile hamburger -->
      <button
        id="mobileMenuButton"
        type="button"
        class="sm:hidden rounded-full p-2 border border-[var(--border)] hover:bg-[var(--hover)]"
        aria-label="Open menu"
        aria-controls="mobileMenu"
        aria-expanded="false"
      >
        <!-- Hamburger icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
        >
          <path d="M4 6h16"></path>
          <path d="M4 12h16"></path>
          <path d="M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile dropdown panel -->
  <div
    id="mobileMenu"
    class="sm:hidden hidden border-t border-[var(--border)] bg-[var(--surface)]"
  >
    <nav class="mx-auto max-w-5xl px-4 py-3 flex flex-col gap-1 text-sm">
      <a
        href="/"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/' ? 'bg-[var(--active)] font-medium' : '' %>"
        >Home</a
      >
      <a
        href="/about"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/about' ? 'bg-[var(--active)] font-medium' : '' %>"
        >About</a
      >
      <a
        href="/projects"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/projects' ? 'bg-[var(--active)] font-medium' : '' %>"
        >Projects</a
      >
      <a
        href="/contact"
        class="rounded px-3 py-2 hover:bg-[var(--hover)] <%= activePath === '/contact' ? 'bg-[var(--active)] font-medium' : '' %>"
        >Contact</a
      >
    </nav>
  </div>
</header>
