<div
  class="rounded-2xl border border-[var(--border)] bg-[var(--surface)] p-5 shadow-sm"
>
  <div class="flex items-center justify-between gap-3">
    <h2 class="font-medium">Hosted Services</h2>

    <span
      class="inline-flex items-center gap-2 rounded-xl border border-[var(--border)] bg-[var(--surface-2)] px-2.5 py-1 text-xs font-medium text-[var(--muted)]"
      title="Example data"
    >
      <span
        class="inline-block h-2 w-2 rounded-full bg-emerald-500"
        aria-hidden="true"
      ></span>
      Live snapshot
    </span>
  </div>

  <!-- Public -->
  <div class="mt-4">
    <div class="text-xs sm:text-sm font-medium text-[var(--muted)]">Public</div>

    <div class="mt-2 space-y-2">
      <!-- Public service 1 -->
      <div
        class="rounded-2xl border border-[var(--border)] bg-[var(--surface-2)] p-4"
      >
        <div class="flex items-start justify-between gap-3">
          <div class="min-w-0">
            <div class="flex flex-wrap items-center gap-2">
              <div class="font-medium text-[var(--text)]">Docs API</div>
              <a
                href="https://docs.example.com"
                class="text-sm text-[var(--muted)] underline underline-offset-4 hover:text-[var(--text)]"
                >docs.example.com</a
              >
            </div>

            <p class="mt-1 text-sm text-[var(--muted)] leading-relaxed">
              Public documentation and status endpoints for tools hosted in the
              stack.
            </p>
          </div>

          <div
            class="shrink-0 inline-flex items-center gap-2 rounded-xl border border-[var(--border)] bg-[var(--surface)] px-2.5 py-1 text-xs font-medium text-[var(--muted)]"
            title="Online"
          >
            <span
              class="inline-block h-2 w-2 rounded-full bg-emerald-500"
              aria-hidden="true"
            ></span>
            Online
          </div>
        </div>
      </div>

      <!-- Public service 2 -->
      <div
        class="rounded-2xl border border-[var(--border)] bg-[var(--surface-2)] p-4"
      >
        <div class="flex items-start justify-between gap-3">
          <div class="min-w-0">
            <div class="flex flex-wrap items-center gap-2">
              <div class="font-medium text-[var(--text)]">Image Toolkit</div>
              <a
                href="https://tools.example.com"
                class="text-sm text-[var(--muted)] underline underline-offset-4 hover:text-[var(--text)]"
                >tools.example.com</a
              >
            </div>

            <p class="mt-1 text-sm text-[var(--muted)] leading-relaxed">
              Small public utilities for image processing and content prep.
            </p>
          </div>

          <div
            class="shrink-0 inline-flex items-center gap-2 rounded-xl border border-[var(--border)] bg-[var(--surface)] px-2.5 py-1 text-xs font-medium text-[var(--muted)]"
            title="Degraded"
          >
            <span
              class="inline-block h-2 w-2 rounded-full bg-amber-500"
              aria-hidden="true"
            ></span>
            Degraded
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Private -->
  <div class="mt-5">
    <div class="text-xs sm:text-sm font-medium text-[var(--muted)]">
      Private
    </div>

    <div class="mt-2 space-y-2">
      <!-- Private service 1 -->
      <div
        class="rounded-2xl border border-[var(--border)] bg-[var(--surface-2)] p-4"
      >
        <div class="flex items-start justify-between gap-3">
          <div class="min-w-0">
            <div class="font-medium text-[var(--text)]">Portainer</div>
            <p class="mt-1 text-sm text-[var(--muted)] leading-relaxed">
              Container management UI for monitoring, logs, and stack control.
            </p>
          </div>

          <div
            class="shrink-0 inline-flex items-center gap-2 rounded-xl border border-[var(--border)] bg-[var(--surface)] px-2.5 py-1 text-xs font-medium text-[var(--muted)]"
            title="Online"
          >
            <span
              class="inline-block h-2 w-2 rounded-full bg-emerald-500"
              aria-hidden="true"
            ></span>
            Online
          </div>
        </div>
      </div>

      <!-- Private service 2 -->
      <div
        class="rounded-2xl border border-[var(--border)] bg-[var(--surface-2)] p-4"
      >
        <div class="flex items-start justify-between gap-3">
          <div class="min-w-0">
            <div class="font-medium text-[var(--text)]">AdGuard</div>
            <p class="mt-1 text-sm text-[var(--muted)] leading-relaxed">
              Network-wide DNS control and filtering for local domains.
            </p>
          </div>

          <div
            class="shrink-0 inline-flex items-center gap-2 rounded-xl border border-[var(--border)] bg-[var(--surface)] px-2.5 py-1 text-xs font-medium text-[var(--muted)]"
            title="Offline"
          >
            <span
              class="inline-block h-2 w-2 rounded-full bg-rose-500"
              aria-hidden="true"
            ></span>
            Offline
          </div>
        </div>
      </div>
    </div>

    <p class="mt-3 text-xs text-[var(--muted)]">
      Private services are accessible only from my internal network or VPN.
    </p>
  </div>
</div>
