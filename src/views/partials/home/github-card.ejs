<% const toDate = (v) => { if (!v) return null; const d = v instanceof Date ? v
: new Date(v); return Number.isNaN(d.getTime()) ? null : d; }; const fmtDateTime
= (v) => { const d = toDate(v); if (!d) return ''; return new
Intl.DateTimeFormat('en-US', { month: 'short', day: 'numeric', year: 'numeric',
hour: '2-digit', minute: '2-digit', hour12: false, }).format(d); }; const
fmtDate = (v) => { const d = toDate(v); if (!d) return ''; return new
Intl.DateTimeFormat('en-US', { month: 'short', day: 'numeric', year: 'numeric',
}).format(d); }; %>

<div
  class="min-w-0 rounded-2xl border border-[var(--border)] bg-[var(--surface)] p-5 shadow-sm"
>
  <div class="flex flex-wrap items-start justify-between gap-3">
    <div class="min-w-0">
      <h2 class="font-medium">GitHub</h2>
      <p class="mt-1 text-sm text-[var(--muted)]">
        Contributions from GitHub & GitLab along with the most recently updated
        repos from Github.
      </p>
    </div>

    <span
      class="inline-flex items-center gap-2 rounded-xl border border-[var(--border)] bg-[var(--surface-2)] px-2.5 py-1 text-xs font-medium text-[var(--muted)]"
      title="Live data (cached server-side)"
    >
      <span
        class="inline-block h-2 w-2 rounded-full bg-emerald-500"
        aria-hidden="true"
      ></span>
      Updated:
      <%= fmtDateTime(locals?.github?.contributions?.lastUpdated || new Date()) %>
    </span>
  </div>

  <div class="mt-4 grid gap-4 lg:grid-cols-3">
    <div
      class="min-w-0 rounded-2xl border border-[var(--border)] bg-[var(--surface-2)] p-4 lg:col-span-2"
    >
      <div class="flex items-center justify-between gap-3">
        <div class="text-xs sm:text-sm font-medium text-[var(--muted)]">
          Contributions
        </div>

        <%
          const profileUrl = (locals.github && locals.github.profileUrl) ? locals.github.profileUrl : '';
          const profileDisabled = !profileUrl;
        %>

        <a
          href="<%= profileUrl || '#' %>"
          target="_blank"
          class="text-xs underline underline-offset-4 hover:text-[var(--text)] <%= profileDisabled ? 'text-[var(--muted)] pointer-events-none opacity-60' : 'text-[var(--muted)]' %>"
          aria-disabled="<%= profileDisabled ? 'true' : 'false' %>"
          tabindex="<%= profileDisabled ? '-1' : '0' %>"
        >
          View on GitHub
        </a>
      </div>

      <div class="mt-3">
        <% const contrib = (locals.github &&
        Array.isArray(locals.github?.contributions?.data)) ?
        locals.github?.contributions?.data : []; const hasData = contrib.length
        > 0; const parseDate = (s) => { const parts = String(s ||
        '').split('-'); const y = Number(parts[0] || 0); const m =
        Number(parts[1] || 1); const d = Number(parts[2] || 1); return new
        Date(Date.UTC(y, m - 1, d)); }; const pad2 = (n) =>
        String(n).padStart(2, '0'); const fmtISO = (dt) =>
        `${dt.getUTCFullYear()}-${pad2(dt.getUTCMonth() +
        1)}-${pad2(dt.getUTCDate())}`; const addDays = (dt, n) => new
        Date(dt.getTime() + n * 86400000); const monthShort = (dt) =>
        dt.toLocaleString('en-US', { month: 'short', timeZone: 'UTC' }); const
        sorted = hasData ? [...contrib].sort((a, b) =>
        String(a.date).localeCompare(String(b.date))) : []; const byDate = new
        Map(); for (const d of sorted) byDate.set(d.date, typeof d.count ===
        'number' ? d.count : 0); const max = sorted.reduce((m, d) => Math.max(m,
        typeof d.count === 'number' ? d.count : 0), 0); const level = (count) =>
        { if (!max || count <= 0) return 0; if (count < max * 0.25) return 1; if
        (count < max * 0.5) return 2; if (count < max * 0.75) return 3; return
        4; }; const dayLabels = [ { row: 1, label: 'Mon' }, { row: 3, label:
        'Wed' }, { row: 5, label: 'Fri' }, ]; const buildHeatmapModel =
        (WINDOW_DAYS, COL_PX = 14) => { let weeks = []; let monthLabels = [];
        let first = null; let last = null; if (!hasData) return { weeks,
        monthLabels, first, last, gridStyle: '' }; last =
        parseDate(sorted[sorted.length - 1].date); first = addDays(last,
        -(WINDOW_DAYS - 1)); const start = addDays(first, -first.getUTCDay());
        const end = addDays(last, 6 - last.getUTCDay()); for (let cursor = new
        Date(start); cursor <= end; cursor = addDays(cursor, 7)) { const days =
        []; for (let i = 0; i < 7; i++) days.push(addDays(cursor, i));
        weeks.push(days); } let prevMonth = null; for (let w = 0; w <
        weeks.length; w++) { const m = weeks[w][0].getUTCMonth(); if (m !==
        prevMonth) { monthLabels.push({ index: w, label: monthShort(weeks[w][0])
        }); prevMonth = m; } } const gridStyle = `grid-template-columns: 24px
        repeat(${weeks.length}, ${COL_PX}px);`; return { weeks, monthLabels,
        first, last, gridStyle }; }; const desktopModel = buildHeatmapModel(183,
        14); const mobileModel = buildHeatmapModel(90, 12); const tinyModel =
        buildHeatmapModel(30, 12); %> <% if (hasData) { %>
        <div
          class="hidden sm:block rounded-xl border border-[var(--border)] bg-[var(--surface)] p-3"
        >
          <%- include('./github-heatmap', { model: desktopModel,
          byDate, fmtISO, fmtDate, level, dayLabels }) %>
        </div>

        <div
          class="sm:hidden heatmap-hide-on-tiny rounded-xl border border-[var(--border)] bg-[var(--surface)] p-3"
        >
          <%- include('./github-heatmap', { model: mobileModel,
          byDate, fmtISO, fmtDate, level, dayLabels }) %>
        </div>

        <div
          class="sm:hidden heatmap-only-tiny rounded-xl border border-[var(--border)] bg-[var(--surface)] p-3"
        >
          <%- include('./github-heatmap', { model: tinyModel, byDate,
          fmtISO, fmtDate, level, dayLabels }) %>
        </div>

        <div
          class="mt-3 flex items-center justify-between text-xs text-[var(--muted)]"
        >
          <span>Less</span>
          <div class="flex items-center gap-1">
            <span
              class="h-3 w-3 rounded-[3px] border border-[var(--border)] bg-[var(--surface-2)]"
            ></span>
            <span
              class="h-3 w-3 rounded-[3px] border border-[var(--border)] bg-blue-200 dark:bg-blue-900/40"
            ></span>
            <span
              class="h-3 w-3 rounded-[3px] border border-[var(--border)] bg-blue-300 dark:bg-blue-800/50"
            ></span>
            <span
              class="h-3 w-3 rounded-[3px] border border-[var(--border)] bg-blue-400 dark:bg-blue-700/60"
            ></span>
            <span
              class="h-3 w-3 rounded-[3px] border border-[var(--border)] bg-blue-600 dark:bg-blue-500/70"
            ></span>
          </div>
          <span>More</span>
        </div>

        <p class="mt-2 text-xs text-[var(--muted)] hidden sm:block">
          Combined GitHub + GitLab activity (last 6 months).
        </p>

        <p
          class="mt-2 text-xs text-[var(--muted)] sm:hidden heatmap-hide-on-tiny"
        >
          Combined GitHub + GitLab activity (last 3 months).
        </p>

        <p class="mt-2 text-xs text-[var(--muted)] sm:hidden heatmap-only-tiny">
          Combined GitHub + GitLab activity (last 30 days).
        </p>
        <% } else { %>
        <div
          class="aspect-[16/5] w-full rounded-xl border border-dashed border-[var(--border)] bg-[var(--surface)]"
          aria-label="GitHub contributions graph placeholder"
        ></div>
        <p class="mt-2 text-xs text-[var(--muted)]">
          No contribution data yet. Provide
          <code
            class="px-1.5 py-0.5 rounded bg-[var(--surface)] border border-[var(--border)]"
          >
            locals.github?.contributions?.data </code
          >.
        </p>
        <% } %>
      </div>
    </div>

    <div
      class="min-w-0 rounded-2xl border border-[var(--border)] bg-[var(--surface-2)] p-4"
    >
      <div class="flex items-center justify-between gap-3">
        <div class="text-xs sm:text-sm font-medium text-[var(--muted)]">
          Top repos (updated)
        </div>
        <span class="text-xs text-[var(--muted)]">5</span>
      </div>

      <div class="mt-3 space-y-2">
        <% const repos = (locals.github && locals.github?.repos?.data) ?
        locals.github?.repos?.data : null; %> <% if (repos && repos.length) { %>
        <% repos.slice(0, 5).forEach((r) => { const isDisabled = !r.url; %>
        <a
          href="<%= r.url || '#' %>"
          target="_blank"
          class="block rounded-xl w-full min-w-0 border border-[var(--border)] bg-[var(--surface)] p-3 transition hover:bg-[var(--surface-2)] <%= isDisabled ? 'pointer-events-none opacity-60' : '' %>"
          aria-disabled="<%= isDisabled ? 'true' : 'false' %>"
          tabindex="<%= isDisabled ? '-1' : '0' %>"
        >
          <div class="flex items-start justify-between gap-3 min-w-0">
            <div class="flex-1 min-w-0">
              <div class="w-full truncate font-medium text-[var(--text)]">
                <%= r.name %>
              </div>

              <% if (r.updated_at) { %>
              <div class="mt-1 text-xs text-[var(--muted)]">
                Updated: <%= fmtDateTime(r.updated_at) %>
              </div>
              <% } %>
            </div>

            <% if (r.language) { %>
            <span
              class="shrink-0 inline-flex items-center rounded-xl border border-[var(--border)] bg-[var(--surface-2)] px-2 py-0.5 text-[11px] font-medium text-[var(--muted)]"
            >
              <%= r.language %>
            </span>
            <% } %>
          </div>
        </a>
        <% }) %>
        <% } else { %>
        <% for (let i=0; i < 5; i++) { %>
        <div
          class="rounded-xl border border-[var(--border)] bg-[var(--surface)] p-3"
        >
          <div class="h-4 w-32 rounded bg-[var(--surface-2)]"></div>
          <div class="mt-2 h-3 w-24 rounded bg-[var(--surface-2)]"></div>
        </div>
        <% } %>

        <p class="mt-2 text-xs text-[var(--muted)]">
          Provide
          <code
            class="px-1.5 py-0.5 rounded bg-[var(--surface)] border border-[var(--border)]"
          >
            locals.github?.repos?.data
          </code>
          to render real data.
        </p>
        <% } %>
      </div>
    </div>
  </div>
</div>
